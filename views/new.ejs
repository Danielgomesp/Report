<div class="jumbotron">
    <h1>Cadastrar Novo Registro</h1>
</div>

<!-- FORM -->
<form action="/new" method="post">
    <div class="form-group">
        <label>Nome do operador</label>
        <input type="text" class="form-control" id="operatorName" name="operatorName"
            placeholder="Escreva o seu nome aqui">
    </div>
    <div class="form-group">
        <label>Turno</label>
        <select class="form-control" id="shift" name="shift">
            <option value="1">1º</option>
            <option value="2">2º</option>
            <option value="3">3º</option>
        </select>
    </div>
    <div class="form-group">
        <label>Data</label>
        <input id="date" name="date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Relatório</label>
        <textarea class="form-control" id="report" name="report" rows="10"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg" id="btn-send" onclick="">Enviar</button>
    </div>
</form>

</div>
<!--container-->

<!--Scripts-->
<script src="javascripts/jquery-3.3.1.min.js"></script>
<script src="javascripts/bootstrap.min.js"></script>
</body>

</html>