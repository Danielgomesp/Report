<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="stylesheets/bootstrap.min.css" rel="stylesheet" />
    <link href="stylesheets/css.css" rel="stylesheet" />
    <title>
        <%= title %>
    </title>
</head>

<body>
    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Inicio <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="new">Novo</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            Relatórios
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Buscar Outro Registro</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="jumbotron">
            <h1>Registro de Ocorrências</h1>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <form action="#" class="search-form" role="search">
                    <input class="form-control" type="text" placeholder="Busque por nome, turno, data ou trecho do relatório"
                        id="search" name="search" autocomplete="on" autofocus="">
                </form>
            </div>
        </div>
        <br>

        <!-- CARD -->
        <div class="row" id="rowCard">
            <% report.forEach(function(reportsystemdb){ %>
            <!--English:    Loop to each data saved to the bank-->
            <!--Portuguese: Loop para cada dado salvo no banco-->
            <div class="col col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <form action="/complete" method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="reportEnvelope">
                                <h4></h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title" id="cardTitle">
                                <%= reportsystemdb.date %>
                            </h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <%= reportsystemdb.shift %>º Turno</li>
                            <li class="list-group-item">
                                <%= reportsystemdb.operatorName %>
                            </li>
                        </ul>
                        <input type="hidden" name="report" id="report" value="<%= reportsystemdb.report %>">
                        <input type="hidden" name="date" id="date" value="<%= reportsystemdb.date %>">
                        <input type="hidden" name="shift" id="shift" value="<%= reportsystemdb.shift %>">
                        <input type="hidden" name="operatorName" id="operatorName" value="<%= reportsystemdb.operatorName %>">
                        <div class="card-body">

                            <button type="submit" class="btn btn-info" onclick="">Relatório Completo</button>

                        </div>
                    </div>
                </form>
            </div>
            <%  }) %>
        </div>
    </div>

    <!--Scripts-->
    <script src="javascripts/jquery-3.3.1.min.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
</body>

</html>